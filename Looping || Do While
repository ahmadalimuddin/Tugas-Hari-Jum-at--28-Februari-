//soal quis nomor 1

#include <iostream>
using namespace std;

void main()
{
	int bil, n, t=0, I=1;

	cout<<"masukkan berapa kali input= "<<endl;
	cin>>n;

	do 
	{
		cout<<"masukkan bilangan "<<I<<"= ";
		cin>>bil;
	
		if (bil % 2 == 0)
		{
			t=t+bil;
		}
		I++;
	}
	while (I<=n);
	
	cout<<"total bilangan genap adalah = "<<t<<endl;
}
